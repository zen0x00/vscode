    /* Selection — dusty blossom */
    "editor.selectionBackground": "#CFA3A066",
    "editor.inactiveSelectionBackground": "#CFA3A033",
    "editor.selectionHighlightBackground": "#CFA3A022",

    /* Cursor (APC gradient stays intact) */
    "editorCursor.foreground": "#B07A78",

    /* Line numbers */
    "editorLineNumber.foreground": "#E6E3DE55",
    "editorLineNumber.activeForeground": "#B07A78",

    /* Search / find */
    "editor.findMatchBackground": "#CFA3A044",
    "editor.findMatchHighlightBackground": "#CFA3A022",

    /* Diagnostics — no harsh red */
    "editorError.foreground": "#3A2F2B",
    "editorWarning.foreground": "#B07A78",
    "editorInfo.foreground": "#CFA3A0",

    /* Invisible UI stays invisible */
    "editorLineHighlightBackground": "#00000000",
    "editorOverviewRuler.border": "#00000000",

